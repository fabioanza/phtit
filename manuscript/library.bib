file = {:Users/fanza/Library/Application Support/Mendeley Desktop/Downloaded/Seifert - 2017 - Stochastic thermodynamics From principles to the cost of precision.pdf:pdf},
title = {{Stochastic thermodynamics: From principles to the cost of precision}},
url = {https://arxiv.org/pdf/1707.03759.pdf},
year = {2017}
}
