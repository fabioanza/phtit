@article{Ross2018,
abstract = {E quilibrium statistical mechanics and thermodynamics provide predictive power that drives much of our fundamental understanding and practical engineering capabilities in chemistry, materials science and biology. However, most natural and technological processes, including photosynthesis, enzyme catalysis, crystal nucleation and material failure, are inherently non-equilibrium. Such processes involve systems driven far from thermodynamic equilibrium and the subsequent relaxation of those systems towards equilibrium. Achieving a predictive understanding of non-equilibrium phenomena that rivals our understanding of equilibrium phenomena has become a central goal in the study of statistical mechanics. Therefore, recent advances that connect equilibrium state variables, such as free energies, to non-equilibrium experimental processes are of broad fundamental and practical importance. In particular, the use of work-fluctuation relations, such as the Jarzynski equality 1 or the Crooks fluctuation theorem 2 , in conjunction with force spectroscopy 3 has become an important technique for measuring the equilibrium free-energy differences between con-formational states of nucleic acids and proteins in non-equilibrium experiments involving single-molecule pulling 4-9. More recently, similar approaches have been applied to non-equilibrium phenomena in a single-electron system 10 and a single-ion quantum harmonic oscillator 11. The strength of this approach is its generality: the work-fluctuation relations are exact theoretical results 12. Hence, the resulting free-energy determinations do not depend on the details of the system or how far it is driven from equilibrium. However, this approach has inherent limitations that prevent its broader use. In particular, it requires the application and measurement of the external work required to drive the system along a reaction coordinate that corresponds to the important conformational changes of the system. For biomolecular systems in which the relevant reaction coordinate is a position or length, this can be accomplished by attaching the molecule to an atomic force microscope probe 6 or a microscale bead for manipulation by optical tweezers 4,5,7-9. However, such attachments are perturbative and impractical to apply in vivo or in otherwise inaccessible microenvironments 13. Furthermore, for many non-equilibrium processes, such as internal biomolecular rearrangements induced by ligand binding or crystal nucleation and annealing, the important reaction coordinate may not correspond to a position or length, and it may be impossible to drive the system along the reaction coordinate while measuring the applied work. To overcome these limitations and enable the study of a broader range of non-equilibrium systems, new methods are necessary to determine equilibrium free energies from non-equilibrium experiments without the measurement of applied work. Existing methods to determine free energies from single-molecule experimental or simulated data require either a smoothly varying free-energy profile 14-17 or, as with Markov state model (MSM) methods 18 and the clamp-and-release approach proposed by Adib 19,20 , that the system is able to relax to a local equilibrium state at each point along the reaction coordinate 16-18,21-23. Although this is possible with umbrella sampling in simulations, it can impose restrictions on experiments similar to those required for the measurement of applied work. Here, we present relaxation fluctuation spectroscopy (ReFlucS), a method for determining equilibrium free-energy differences, without the application or measurement of work, by analysing thermal fluctuations during the relaxation of a system from a non-equilibrium initial state. In brief, with ReFlucS, we treat the stochastic trajectories of single biomolecules or other fluctuating systems as discrete, reversible Markov processes with coarse graining at different temporal and spatial scales. We then extrapolate to long temporal and small spatial scales to obtain the equilibrium free-energy differences along the experimentally observable reaction coordinate. This extrapolation requires an additional assumption beyond those typically used to derive work-fluctuation relations: that the non-equilibrium dynamics are well-described by Brownian motion near a slow manifold-that is, a relatively low-dimensional surface in configuration space spanned by the most slowly relaxing degrees of Recent advances in non-equilibrium statistical mechanics and single-molecule measurements have enabled the determination of equilibrium free energies from non-equilibrium work measurements for fluctuating systems ranging from biological molecules to quantum oscillators. However, for many important non-equilibrium processes, it is difficult or impossible to apply and measure the work required to drive the system through the relevant conformational changes. Here, we show that it is possible, with an appropriate extrapolation to infinite temporal scale and zero spatial scale, to determine equilibrium free energies, without work measurement, by analysing the stochastic trajectories of single biomolecules or other nanoscale, fluctuating systems as they spontaneously relax from a non-equilibrium initial state. We validate the method with simulations and demonstrate its application by determining the free-energy profile for DNA molecules in a structured nanofluidic environment with an experimental protocol that mimics many natural processes with energy injection followed by thermal relaxation.},
author = {Ross, David and Strychalski, Elizabeth A and Jarzynski, Christopher and Stavis, Samuel M},
doi = {10.1038/s41567-018-0153-5},
file = {:Users/fanza/Library/Application Support/Mendeley Desktop/Downloaded/Ross et al. - 2018 - Equilibrium free energies from non-equilibrium trajectories with relaxation fluctuation spectroscopy.pdf:pdf},
issn = {1745-2473},
journal = {Nature Physics},
month = {aug},
number = {8},
pages = {842--847},
title = {{Equilibrium free energies from non-equilibrium trajectories with relaxation fluctuation spectroscopy}},
url = {https://doi.org/10.1038/s41567-018-0153-5 http://www.nature.com/articles/s41567-018-0153-5},
volume = {14},
year = {2018}
}
@article{Seifert2017,
abstract = {In these lecture notes, the basic principles of stochastic thermodynamics are developed starting with a closed system in contact with a heat bath. A trajectory undergoes Markovian transitions between observable meso-states that cor-respond to a coarse-grained description of, e.g., a biomolecule or a biochemical network. By separating the closed system into a core system and into reservoirs for ligands and reactants that bind to, and react with the core system, a description as an open system controlled by chemical potentials and possibly an external force is achieved. Entropy production and further thermodynamic quantities defined along a trajectory obey various fluctuation theorems. For describing fluctuations in a non-equilibrium steady state in the long-time limit, the concept of a rate function for large deviations from the mean behaviour is derived from the weight of a trajectory. Universal bounds on this rate func-tion follow which prove and generalize the thermodynamic uncertainty relation that quantifies the inevitable trade-off between cost and precision of any biomolecular process. Specific illustrations are given for molecular motors, Brow-nian clocks and enzymatic networks that show how these tools can be used for thermodynamic inference of hidden properties of a system.},
archivePrefix = {arXiv},
arxivId = {arXiv:1707.03759v1},
author = {Seifert, Udo},
