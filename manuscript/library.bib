doi = {10.1007/JHEP11(2016)009},
file = {:Users/fanza/Library/Application Support/Mendeley Desktop/Downloaded/Hayden et al. - 2016 - Holographic duality from random tensor networks.pdf:pdf},
issn = {1029-8479},
journal = {Journal of High Energy Physics},
keywords = {AdS-CFT Correspondence,Black Holes in String Theory,Gauge-gravity correspondence,Random Systems},
month = {nov},
number = {11},
pages = {9},
title = {{Holographic duality from random tensor networks}},
url = {https://link.springer.com/content/pdf/10.1007{\%}2FJHEP11{\%}282016{\%}29009.pdf http://link.springer.com/10.1007/JHEP11(2016)009},
volume = {2016},
