file = {:Users/fanza/Library/Application Support/Mendeley Desktop/Downloaded/Richerme et al. - 2014 - Non-local propagation of correlations in quantum systems with long-range interactions.pdf:pdf},
issn = {0028-0836},
journal = {Nature},
month = {jul},
number = {7508},
pages = {198--201},
title = {{Non-local propagation of correlations in quantum systems with long-range interactions}},
url = {https://www.nature.com/articles/nature13450.pdf http://www.nature.com/articles/nature13450},
volume = {511},
year = {2014}
